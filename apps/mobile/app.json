{
  "expo": {
    "name": "Gennesis Attendance",
    "slug": "sistema-ponto-engenharia",
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./assets/favicon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/favicon.png",
      "resizeMode": "contain",
      "backgroundColor": "#111827"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.engenharia.sistemaponto",
      "statusBar": {
        "style": "light",
        "backgroundColor": "#111827"
      },
      "infoPlist": {
        "NSCameraUsageDescription": "Este app precisa acessar a câmera para capturar fotos ao bater o ponto.",
        "NSLocationWhenInUseUsageDescription": "Este app precisa acessar sua localização para validar o ponto.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Este app precisa acessar sua localização para validar o ponto."
      }
    },
    "android": {
      "versionCode": 2,
      "adaptiveIcon": {
        "foregroundImage": "./assets/favicon.png",
        "backgroundColor": "#111827"
      },
      "package": "com.engenharia.sistemaponto",
      "navigationBar": {
        "visible": "leanback",
        "backgroundColor": "#374151"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO",
        "android.permission.FOREGROUND_SERVICE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "208f8118-e466-4554-97db-2e26271dd4fa"
      },
      "EXPO_PUBLIC_API_URL": "https://sistema-pontobackend-production.up.railway.app"
    },
    "owner": "lucassouzss"
  }
}
