# Configurações do Servidor
NODE_ENV=development
PORT=5000
HOST=localhost

# Configurações do Banco de Dados
DATABASE_URL="postgresql://usuario:senha@localhost:5432/sistema_ponto?schema=public"

# Configurações JWT
JWT_SECRET=sua_chave_secreta_jwt_aqui
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=sua_chave_secreta_refresh_aqui
JWT_REFRESH_EXPIRES_IN=30d

# Configurações AWS S3
AWS_ACCESS_KEY_ID=sua_access_key_aqui
AWS_SECRET_ACCESS_KEY=sua_secret_key_aqui
AWS_REGION=us-east-1
AWS_S3_BUCKET=nome_do_seu_bucket

# Configurações de Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Configurações de Geolocalização
DEFAULT_LATITUDE=-23.5505
DEFAULT_LONGITUDE=-46.6333
MAX_DISTANCE_METERS=1000

# Configurações de Email (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu_email@gmail.com
SMTP_PASS=sua_senha_app

# Configurações da Empresa
COMPANY_NAME="Empresa de Engenharia"
COMPANY_CNPJ="00.000.000/0001-00"
COMPANY_ADDRESS="Endereço da Empresa"

# Configurações de Horário
WORK_START_TIME="08:00"
WORK_END_TIME="17:00"
LUNCH_START_TIME="12:00"
LUNCH_END_TIME="13:00"
TOLERANCE_MINUTES=10
MAX_OVERTIME_HOURS=2
