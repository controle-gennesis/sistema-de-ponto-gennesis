{
  "name": "sistema-ponto-engenharia",
  "version": "1.0.0",
  "description": "Sistema completo de controle de ponto para empresa de engenharia",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd apps/backend && npm run dev",
    "dev:frontend": "cd apps/frontend && npm run dev",
    "dev:mobile": "cd apps/mobile && npm run start",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd apps/backend && npm run build",
    "build:frontend": "cd apps/frontend && npm run build",
    "start": "npm run start:backend",
    "start:backend": "cd apps/backend && npm run start",
    "start:frontend": "cd apps/frontend && npm run start",
    "start:production": "npm run build:backend && npm run start:backend",
    "install:all": "npm install && npm run install:backend && npm run install:frontend && npm run install:mobile",
    "install:backend": "cd apps/backend && npm install",
    "install:frontend": "cd apps/frontend && npm install",
    "install:mobile": "cd apps/mobile && npm install",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd apps/backend && npm run lint",
    "lint:frontend": "cd apps/frontend && npm run lint"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "react-calendar": "^6.0.0",
    "react-native-web": "~0.19.6",
    "@expo/webpack-config": "^19.0.0"
  }
}
